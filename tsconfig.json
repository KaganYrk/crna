{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "declaration": false,
    "composite": false,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": [
      "ES2016"
    ],
    
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2016",
    "typeRoots": [
      "./ts-declarations",
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  }
}